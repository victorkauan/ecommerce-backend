generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Customer {
  id        Int      @id @default(autoincrement())
  firstName String
  lastName  String
  email     String   @unique
  phone     String
  birthDate DateTime

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model ProductCategory {
  id          Int    @id @default(autoincrement())
  name        String
  description String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
